#:kivy 2.1.0

<WelcomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: [20, 50, 20, 50]

        Image:
            source: "assets/Kharcha_Book_Symbol.png"
            size_hint: (1, 0.4)
            fit_mode: "contain"  

        Label:
            text: "[b][color=#FFD700]Kharcha[/color] [color=#FFFFFF]Book[/color][/b]"
            markup: True
            font_size: '48sp'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]

        Label:
            id: tagline_label
            text: "[i][color=#87CEEB]Money Talks ‚Äî Make Sure It Says 'Well Spent!'[/color][/i]"
            markup: True
            font_size: '20sp'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]


<LoginScreen>:
    FloatLayout:
        # Dark mode switch at top-right
        Switch:
            id: dark_mode_switch
            size_hint: None, None
            size: '60dp', '30dp'
            active: root.dark_mode
            on_active: root.toggle_dark_mode(*args)
            pos_hint: {'right': 0.98, 'top': 0.98}

        # Title with dynamic color
        Label:
            text: 'Kharcha Book'
            font_size: '32sp'
            size_hint_y: None
            height: '50dp'
            pos_hint: {'center_x': 0.5, 'top': 0.8}
            color: (1, 1, 1, 1) if root.dark_mode else (0, 0, 0, 1)  # üî• Dynamic color change

        # Username field
        TextInput:
            id: username
            hint_text: 'Username'
            size_hint_y: None
            height: '50dp'
            width: 400
            pos_hint: {'center_x': 0.5, 'top': 0.7}

        # Password field
        TextInput:
            id: password
            hint_text: 'Password'
            password: True
            size_hint_y: None
            height: '50dp'
            width: 400
            pos_hint: {'center_x': 0.5, 'top': 0.63}

        # Login button
        Button:
            text: 'Login'
            size_hint_y: None
            height: '50dp'
            width: 200
            pos_hint: {'center_x': 0.5, 'top': 0.56}
            on_press: root.login_user()

        # Register button
        Button:
            text: 'Register'
            size_hint_y: None
            height: '50dp'
            width: 200
            pos_hint: {'center_x': 0.5, 'top': 0.49}
            on_press: root.register_user()

        # Forgot Password button
        Button:
            text: 'Forgot Password?'
            size_hint_y: None
            height: '30dp'
            width: 200
            font_size: '14sp'
            color: (0.7, 0.7, 0.7, 1)
            pos_hint: {'center_x': 0.5, 'top': 0.43}
            on_press: root.show_forgot_password_popup()


<RegisterScreen>:
    GridLayout:
        cols: 1
        spacing: 10
        padding: [20, 50, 20, 20]

        Label:
            text: "New Username"
        TextInput:
            id: reg_username
            multiline: False

        Label:
            text: "New Password"
        TextInput:
            id: reg_password
            multiline: False
            password: True

        Button:
            text: "‚úÖ Register"
            on_press: root.register_user()

        Button:
            text: "üîô Back"
            on_press: app.root.current = "login"

<HomeScreen>:
    GridLayout:
        cols: 1
        spacing: 10
        padding: [20, 50, 20, 20]

        Label:
            text: "üè° Welcome to Kharcha Book!"
            font_size: 24

        Button:
            text: "‚ûï Add Expense"
            on_press: root.add_expense_screen()

        Button:
            text: "üìä View Expenses"
            on_press: app.root.current = "view_expense"

        Button:
            text: "‚öôÔ∏è Set Monthly Budget"
            on_press: root.set_budget()

        Button:
            text: "üîô Logout"
            on_press: root.logout_user()

<AddExpenseScreen>:
    GridLayout:
        cols: 1
        spacing: 10
        padding: [20, 50, 20, 20]

        Label:
            text: "Enter Amount"
        TextInput:
            id: amount_input
            multiline: False

        Label:
            text: "Enter Category"
        TextInput:
            id: category_input
            multiline: False

        Button:
            text: "üíæ Save Expense"
            on_press: root.save_expense()

        Button:
            text: "üîô Back"
            on_press: root.back_to_home()

<ViewExpenseScreen>:
    GridLayout:
        cols: 1
        spacing: 10
        padding: [20, 50, 20, 20]

        Label:
            text: "Your Expenses"
            font_size: 24

        GridLayout:
            cols: 2

            Label:
                text: "Start Date (DD-MM-YYYY):"
            TextInput:
                id: start_date
                hint_text: "Start Date (dd-mm-yyyy)"
                multiline: False

            Label:
                text: "End Date (DD-MM-YYYY):"
            TextInput:
                id: end_date
                hint_text: "End Date (dd-mm-yyyy)"
                multiline: False

        Button:
            text: "üîç Filter"
            on_press: root.apply_filter()

        Button:
            text: "üìà Show Expense Graph"
            on_press: root.show_graph()

        Button:
            text: "üì§ Export to CSV"
            on_press: root.export_to_csv()

        ScrollView:
            size_hint_y: 0.5
            GridLayout:
                cols: 1
                size_hint_y: None
                height: self.minimum_height

                Label:
                    id: expense_list
                    text: "Loading expenses..."
                    font_size: 18
                    halign: "left"
                    valign: "top"
                    size_hint_y: None
                    height: self.texture_size[1]

        Button:
            text: "üîô Back"
            on_press: root.back_to_home()
